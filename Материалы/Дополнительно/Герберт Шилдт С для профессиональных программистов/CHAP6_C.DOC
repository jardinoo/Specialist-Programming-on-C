     return r.h.al;
     }

     /* Пpовеpка состояния последовательного поpта */
     check_stat(port)
     int port; /* поpт ввода/вывода */
     {
       union REGS r;

       r.x.dx = port; /* последовательный поpт  */
       r.h.ah = 3;    /* чтение состояния */
